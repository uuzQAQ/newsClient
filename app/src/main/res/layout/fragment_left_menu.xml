<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_slidingmenu_left"
    >
    
    <RelativeLayout
        android:id="@+id/rl_news"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:background="#40282c"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_news"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻"
            android:layout_toRightOf="@id/iv_news"
            android:textColor="#6e7074"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEWS"
            android:layout_toRightOf="@id/iv_news"
            android:layout_below="@id/tv_tip1"
            android:textColor="#6e7074"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_favorite"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_read"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:layout_toRightOf="@id/iv_favorite"
            android:textColor="#6e7074"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAVORITE"
            android:layout_toRightOf="@id/iv_favorite"
            android:layout_below="@id/tv_tip2"
            android:textColor="#6e7074"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_local"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"

        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_local_news"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_tip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地"
            android:layout_toRightOf="@id/iv_local"
            android:textColor="#6e7074"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCAL"
            android:layout_toRightOf="@id/iv_local"
            android:layout_below="@id/tv_tip3"
            android:textColor="#6e7074"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_ties"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_tip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟帖"
            android:textColor="#6e7074"
            android:layout_toRightOf="@id/iv_comment"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMENT"
            android:layout_toRightOf="@id/iv_comment"
            android:layout_below="@id/tv_tip4"
            android:textColor="#6e7074"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/biz_navigation_tab_pics"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_tip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:layout_toRightOf="@id/iv_photo"
            android:textColor="#6e7074"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHOTO"
            android:layout_toRightOf="@id/iv_photo"
            android:layout_below="@id/tv_tip5"
            android:textColor="#6e7074"
            />

    </RelativeLayout>

</LinearLayout>
